<% include ../include/adminallcss.ejs %>
<title>Admin Panel | Meet Shah</title>

            
            <% include ../include/adminheader.ejs %>      
            
       

                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">Testimonials</li>
                </ul>             






                <div class="row">
                    <div class="col-md-12">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (testimonials) { %>
        <form  class="form-horizontal" action="" method="post" enctype="multipart/form-data"> 

            <div class="panel panel-default">

                <div class="panel-heading">
                    <h3 class="panel-title">Edit Testimonials</h3>
                </div>
                
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">User Name </label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            <input type="text" class="form-control" name="username" id="username" value="<%= testimonials.user_name %>" required disabled title="Username can't be changed">
                        </div>
                        <span class="help-block">Enter User Name</span>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Message</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            <textarea type="text" class="form-control" name="messageofuser" id="last-name" required><%= testimonials.messageofuser %></textarea>
                        </div>
                        <span class="help-block">Enter Message</span>
                    </div>
                </div>

        
                <div class="form-group">
                    <label class="col-md-3 col-xs-12 control-label">Choose position </label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                            <select id="position" name="position" class="form-control" required>
                                <option selected><%= testimonials.position %></option>
                                <option>Manager</option>
                                <option>CEO</option>
                              
                            </select>
                        </div>
                        <span class="help-block">Select position</span>
                    </div>
                </div>


                <div class="panel-footer">
                    <button type="submit" class="btn btn-primary pull-right">Update Testimonials</button> 
    
                </div>

            </div>


        </form>
    <% } else { %>
        <p class="text-center">Testimonials Not Found. Go <a href="/add">here</a> to add Testimonials.</p>
    <% } %>
</div>

</div>



<% include ../include/adminallscript.ejs %>  

